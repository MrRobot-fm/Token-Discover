{
  "extends": [
    "stylelint-config-prettier",
    "stylelint-config-idiomatic-order",
    "stylelint-config-standard",
    "stylelint-prettier/recommended"
  ],
  "plugins": ["stylelint-order"],
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "function",
          "if",
          "each",
          "include",
          "include-media",
          "tailwind"
        ]
      }
    ]
  }
}
